<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".user.user_buyed_items.Orders">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:text="TRACK YOUR ORDERS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/b"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                >
                <TextView
                    android:id="@+id/vm_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/vm_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Quantity"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/vm_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="serif"
                    android:text="Product Price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/n"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black"
            android:layout_below="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_below="@+id/n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:fontFamily="serif"
                android:text="YOUR DETAILS"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/n"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:fontFamily="serif"
                android:text="Name :"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="60dp"
                android:fontFamily="serif"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:fontFamily="serif"
                android:text="Booking Date:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vm_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="90dp"
                android:fontFamily="serif"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:fontFamily="serif"
                android:text="Booking Time:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vm_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="120dp"
                android:fontFamily="serif"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

               </RelativeLayout>
        <View
            android:id="@+id/ll"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black"
            android:layout_below="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/mm"
            android:layout_below="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:fontFamily="serif"
                android:text="TRACK ORDER"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/mm"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="3dp"
                    android:layout_height="290dp"
                    android:layout_centerInParent="true"
                    android:background="#95101010" />


                <TextView
                    android:id="@+id/oconform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="60dp"
                    android:text="Order Confirmed"
                    android:textColor="#9E9E9E"
                    android:textStyle="bold" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="80dp"
    android:layout_marginLeft="60dp"
    android:visibility="gone"
    android:id="@+id/lconform">
    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loc"
        android:textColor="@color/bluee"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textColor="@color/bluee"
        android:textStyle="bold" />
</LinearLayout>


                <TextView
                    android:id="@+id/opacked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="120dp"
                    android:text="Order Packed"
                    android:textColor="@color/bluee"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="220dp"
                    android:visibility="gone"
                    android:id="@+id/lpacked">
                    <TextView
                        android:id="@+id/locp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loc"
                        android:textColor="@color/bluee"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/datep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textColor="@color/bluee"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:id="@+id/odispatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="180dp"
                    android:text="Order Dispatched"
                    android:textColor="#9E9E9E"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="60dp"
                    android:visibility="gone"
                    android:id="@+id/ldis">
                    <TextView
                        android:id="@+id/locd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loc"
                        android:textColor="@color/bluee"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textColor="@color/bluee"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/odeliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="250dp"
                    android:text="Deliverd"
                    android:textColor="#9E9E9E"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="220dp"
                    android:visibility="gone"
                    android:id="@+id/ldelivered">
                    <TextView
                        android:id="@+id/locde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loc"
                        android:textColor="@color/bluee"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/datede"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textColor="@color/bluee"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>